void helper(ll u,vector<vll> &adj,vll &dist)
{
	int n=adj.size();
	dist[u]=0;
	set<pair<ll,ll>> st;
	st.insert({dist[u],u});

	while(!st.empty())
	{
		pair<ll,ll> node=*st.begin();
		st.erase(st.begin());

		ll d=node.ff;
		ll u=node.ss;

		for(int v=0;v<n;v++)
		{
			ll w=adj[u][v];

			if(d+w<dist[v])
			{
				st.erase({dist[v],v});
				dist[v]=d+w;
				st.insert({dist[v],v});
			}
		}
	}

}
